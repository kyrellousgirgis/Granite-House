@model IEnumerable<final_MVC_Test.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fas fa-plus"></i>
        Create New
    </a>
</p>
<form method="get" asp-action="Index" class="row d-flex flex-row justify-content-center ">
    <div class="col-7">
        <input name="name" type="text" class="form-control   " id="name" />
    </div>
        <input type="submit" value="Search" name="submit" class="rounded-pill col-2 btn btn-primary " />
</form>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShadeColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialTag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td class="col-2">

                @*@Html.DisplayFor(modelItem => item.Image)*@
                <img class="rounded-circle img-fluid w-50" src="@item.Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShadeColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialTag.Name)
            </td>
            
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit"></i>
                </a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                    <i class="fas fa-list-alt"></i>

                </a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    document.getElementById("name").value = "";
</script>